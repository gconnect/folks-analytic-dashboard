{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "react-app-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "folks-finance-js-sdk"
  ],
  "exclude": [
    "node_modules"
  ]
}
